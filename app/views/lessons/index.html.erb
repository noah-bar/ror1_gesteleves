<h1>Lessons</h1>
<%= form_with(url: lessons_path, method: :get, local: true) do %>
  <div class="form-group">
    <label for="filter">Filter:</label>
    <%= select_tag :filter, options_for_select([['Active', 'active'],['All', 'all']], params[:filter] || 'Active'), onchange: 'this.form.submit();' %>
  </div>
<% end %>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Classroom</th>
            <th scope="col">Branch</th>
            <th scope="col">Teacher</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        <% @lessons.each do |lesson| %>
            <tr>
                <td><%= lesson.id %></td>
                <td><%= lesson.classroom.name %></td>
                <td><%= lesson.branch.name %></td>
                <td><%= lesson.teacher.full_name %></td>
                <td>
                    <a href="<%= edit_lesson_path lesson %>" class="btn btn-warning ml-2">Edit</a>
                    <a href="<%= lesson_path lesson %>" class="btn btn-primary mr-2">Voir</a>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<a href="<%= new_lesson_path %>" class="btn btn-primary">New</a>