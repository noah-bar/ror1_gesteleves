<h1>Teachers</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        <% @teachers.each do |teacher| %>
            <tr>
                <td><%= teacher.id %></td>
                <td><%= teacher.first_name %></td>
                <td><%= teacher.last_name %></td>
                <td>
                    <a href="<%= edit_teacher_path teacher %>" class="btn btn-warning ml-2">Edit</a>
                    <a href="<%= teacher_path teacher %>" class="btn btn-primary mr-2">Voir</a>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<a href="<%= new_teacher_path %>" class="btn btn-primary">New</a>